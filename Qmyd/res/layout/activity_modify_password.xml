<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <!-- 头部title -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" >

        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="@dimen/title_width"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00ffffff"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ib_submit_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:text="提交"
            android:textColor="#FF7500"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/y_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydata_item_height"
        android:layout_marginTop="10dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/tv_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="当前密码"
            android:textColor="@color/common_black_dark"
            android:textSize="18sp" />

        <com.ak.qmyd.view.ContainsEmojiEditText
            android:id="@+id/edt_old_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_modify"
            android:background="@android:color/transparent"
            android:hint="请输入当前密码"
            android:maxEms="18"
            android:maxLength="18"
            android:password="true"
            android:textColor="@color/common_black_dark"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydata_item_height"
        android:layout_marginTop="10dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/tv_modify1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="新密码"
            android:textColor="@color/common_black_dark"
            android:textSize="18sp" />

        <com.ak.qmyd.view.ContainsEmojiEditText
            android:id="@+id/edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_modify1"
            android:background="@android:color/transparent"
            android:hint="请输入新密码"
            android:maxEms="18"
            android:maxLength="18"
            android:password="true"
            android:textColor="@color/common_black_dark"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydata_item_height"
        android:layout_marginTop="1dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/tv_modify2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="确认新密码"
            android:textColor="@color/common_black_dark"
            android:textSize="18sp" />

        <com.ak.qmyd.view.ContainsEmojiEditText
            android:id="@+id/edt_new_password2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_modify2"
            android:background="@android:color/transparent"
            android:hint="请输入确认密码"
            android:maxEms="18"
            android:maxLength="18"
            android:password="true"
            android:textColor="@color/common_black_dark"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>