<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_left_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/left_menu_layout"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingLeft="35dp" >

        <com.ak.qmyd.view.CircleImageView
            android:id="@+id/iv_user_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/qz_user_logo" />

        <LinearLayout
            android:id="@+id/ll_user_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="我的"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_user_loginout_button"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_round_bg3"
                android:gravity="center|center_vertical"
                android:text="登出"
                android:textColor="#969696"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_user_login_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@drawable/btn_round_bg3"
            android:gravity="center|center_vertical"
            android:text="请登录"
            android:textColor="#969696"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leftlayout_xl"
        style="@style/left_menu_layout"
        android:layout_marginTop="30dp"
        android:paddingLeft="35dp" >

        <ImageView
            style="@style/left_menu_layout_item_image"
            android:src="@drawable/home_left_menu_xl" />

        <TextView
            style="@style/left_menu_layout_item_text"
            android:text="训练" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leftlayout_hd"
        style="@style/left_menu_layout"
        android:paddingLeft="35dp" >

        <ImageView
            style="@style/left_menu_layout_item_image"
            android:src="@drawable/home_left_menu_hd" />

        <TextView
            style="@style/left_menu_layout_item_text"
            android:text="活动" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leftlayout_cg"
        style="@style/left_menu_layout"
        android:paddingLeft="35dp" >

        <ImageView
            style="@style/left_menu_layout_item_image"
            android:src="@drawable/home_left_menu_cg" />

        <TextView
            style="@style/left_menu_layout_item_text"
            android:text="场馆" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leftlayout_dt"
        style="@style/left_menu_layout"
        android:paddingLeft="35dp" >

        <ImageView
            style="@style/left_menu_layout_item_image"
            android:src="@drawable/home_left_menu_dt" />

        <TextView
            style="@style/left_menu_layout_item_text"
            android:text="动态" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leftlayout_wd"
        style="@style/left_menu_layout"
        android:paddingLeft="35dp" >

        <ImageView
            style="@style/left_menu_layout_item_image"
            android:src="@drawable/home_left_menu_wd" />

        <TextView
            style="@style/left_menu_layout_item_text"
            android:text="我的" />
    </LinearLayout>

</LinearLayout>