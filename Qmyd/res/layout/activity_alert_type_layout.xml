        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#EFEFF4" />

        <RelativeLayout
            android:id="@+id/rl_alert_type_layout_thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp" >

            <TextView
                android:id="@+id/tv_alert_type_layout_thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周四"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_alert_type_layout_thursday_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_alert_type_layout_thursday"
                android:layout_gravity="right"
                android:background="#0fff"
                android:src="@drawable/gou"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#EFEFF4" />

        <RelativeLayout
            android:id="@+id/rl_alert_type_layout_friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp" >

            <TextView
                android:id="@+id/tv_alert_type_layout_friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周五"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_alert_type_layout_friday_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_alert_type_layout_friday"
                android:layout_gravity="right"
                android:background="#0fff"
                android:src="@drawable/gou"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
