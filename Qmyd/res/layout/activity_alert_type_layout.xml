                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_alert_type_layout_saturday"
                android:layout_gravity="right"
                android:background="#0fff"
                android:src="@drawable/gou"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#EFEFF4" />

        <RelativeLayout
            android:id="@+id/rl_alert_type_layout_sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp" >

            <TextView
                android:id="@+id/tv_alert_type_layout_sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周日"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_alert_type_layout_sunday_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_alert_type_layout_sunday"
                android:layout_gravity="right"
                android:background="#0fff"
                android:src="@drawable/gou"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFEFF4" >
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>