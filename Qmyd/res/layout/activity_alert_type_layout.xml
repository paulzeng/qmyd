<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl__alert_type_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/white" >

            <ImageButton
                android:id="@+id/ib_alert_type_layout_return"
                android:layout_width="@dimen/title_width"
                android:layout_height="@dimen/title_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="#00ffffff"
                android:src="@drawable/arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="重复"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#EFEFF4" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FF8F06"
                android:gravity="top" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_alert_type_layout_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp" >

            <TextView
                android:id="@+id/tv_alert_type_layout_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不重复"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_alert_type_layout_no_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_alert_type_layout_no"
                android:layout_gravity="right"
                android:background="#0fff"
                android:src="@drawable/gou"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#EFEFF4" />

        <RelativeLayout
            android:id="@+id/rl_alert_type_layout_monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp" >

            <TextView
                android:id="@+id/tv_alert_type_layout_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周一"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_alert_type_layout_monday_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_alert_type_layout_monday"
                android:layout_gravity="right"
                android:background="#0fff"
                android:src="@drawable/gou"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#EFEFF4" />

        <RelativeLayout
            android:id="@+id/rl_alert_type_layout_tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp" >

            <TextView
                android:id="@+id/tv_alert_type_layout_tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周二"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_alert_type_layout_tuesday_img"
