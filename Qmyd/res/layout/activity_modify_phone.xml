<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <!-- 头部title -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" >

        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="@dimen/title_width"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00ffffff"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改手机号"
            android:textColor="@color/black"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/ib_submit_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#FF7500"
            android:textSize="20sp" 
            android:text="提交"
            android:layout_marginRight="@dimen/margin_right" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/y_line" />

    <RelativeLayout
        android:id="@+id/rl_modifyPhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mydata_item_height"
        android:layout_marginTop="10dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/tv_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:text="绑定号码"
            android:textColor="@color/common_black_dark"
            android:textSize="18sp" /> 

        <EditText
            android:hint="请输入号码"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_modify"
            android:textColor="@color/common_black_dark"
            android:textSize="18sp" />
    </RelativeLayout>

    

</LinearLayout>