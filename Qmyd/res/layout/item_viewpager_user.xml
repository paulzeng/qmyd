<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_viewpager_height"
    android:minHeight="@dimen/home_viewpager_height" >

    <ImageView
        android:id="@+id/find_banner_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@drawable/find_banner_bj" >

        <com.ak.qmyd.view.CircleImageView
            android:id="@+id/iv_user_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/qz_user_logo" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_user_img"
            android:gravity="center_vertical"
            android:text="夏天的风"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!--
             <com.ak.qmyd.view.CirclePageIndicator
            android:id="@+id/find_banner_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dip" />
        -->
    </RelativeLayout>

</FrameLayout>