<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:gravity="center_horizontal"
    android:background="#fff" >
  <ImageView 
      android:id="@+id/iv_my_train_item_img"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_centerVertical="true"/>  
   <TextView 
       android:id="@+id/tv_my_train_item_type"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="足球"
       android:layout_marginLeft="20dp"
       android:textSize="20sp"
       android:layout_centerVertical="true"
       android:layout_toRightOf="@+id/iv_my_train_item_img"
       android:textColor="#333333"/>
   <ImageView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:layout_alignBaseline="@+id/iv_my_train_item_img"
       android:src="@drawable/br_next_icon"/>
</RelativeLayout>
