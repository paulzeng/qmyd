<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFF4"
        android:clickable="false"
        android:enabled="false"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_history_elv_group_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:clickable="false"
            android:enabled="false"
            android:text="2014年"
            android:textColor="#90908F"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#fff"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_history_elv_group_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="三月"
            android:textColor="#606060"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_history_elv_group_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_history_elv_group_month"
            android:layout_marginLeft="80dp"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/tv_history_elv_group_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_history_elv_group_img"
            android:layout_toRightOf="@+id/iv_history_elv_group_img"
            android:text="200min"
            android:textColor="#BABABA"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_history_elv_group_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_history_elv_group_month"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFF4" >
    </LinearLayout>

</LinearLayout>