<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="#EFEFF4"
     android:padding="10dp" >

     <TextView
         android:id="@+id/tv_train_history_month"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:text="三月"
         android:textColor="#606060"
         android:textSize="18sp" />

     <ImageView
         android:id="@+id/iv_train_history_img"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/tv_train_history_month"
         android:layout_toLeftOf="@+id/tv_train_history_total_time"
         android:src="@drawable/time" />

     <TextView
         android:id="@+id/tv_train_history_total_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/iv_train_history_img"
         android:layout_alignParentRight="true"
         android:layout_marginRight="14dp"
         android:text="200min" />
 </RelativeLayout>

</LinearLayout>