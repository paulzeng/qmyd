<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_train_list_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    
   <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">
        <ImageButton
            android:id="@+id/ib_trainlist_return"
           android:layout_width="@dimen/title_width"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00ffffff"
            android:src="@drawable/arrow_back" />

        
        <TextView
            android:id="@+id/tv_trainlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="шонч╗Г" />

    </RelativeLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEDEAB"/>
    

    <LinearLayout
        android:id="@+id/ll_train_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDF3EC"
        android:padding="10dp"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_trainlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:scrollbars="none"
            android:dividerHeight="15px"
            android:divider="#F0F1F2"
            android:cacheColorHint="@android:color/transparent">
        </ListView>

    </LinearLayout>

</LinearLayout>
</android.support.v4.widget.DrawerLayout>