<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_message_center_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <!-- 头部title -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:background="@color/white" >

                <ImageButton
                    android:id="@+id/imgBtnBack"
                    android:layout_width="@dimen/title_width"
                    android:layout_height="@dimen/title_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="#00ffffff"
                    android:src="@drawable/arrow_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="个人信息"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ib_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_right"
                    android:text="完成"
                    android:textColor="#FF7500"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/y_line" />

            <RelativeLayout
                android:id="@+id/rl_user_head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mydata_item_height"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="24dp"
                    android:text="头像"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />

                <com.ak.qmyd.view.CircleImageView
                    android:id="@+id/iv_user_info_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/g_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mydata_item_height"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:text="用户名"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />

                <com.ak.qmyd.view.ContainsEmojiEditText
                    android:id="@+id/edt_username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:background="#00000000"
                    android:gravity="center_vertical|right"
                    android:hint="用户名在10个字符以内"
                    android:maxEms="10"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/g_line" />

            <RelativeLayout
                android:id="@+id/rl_user_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mydata_item_height"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:text="性别"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:background="@android:color/transparent"
                    android:text="男"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/g_line" />

            <RelativeLayout
                android:id="@+id/rl_user_height"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mydata_item_height"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:text="身高"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_edt_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:text="cm"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_edt_height"
                    android:background="#00000000"
                    android:hint=" "
                    android:inputType="number"
                    android:maxEms="3"
                    android:maxLength="3"
                    android:numeric="integer"
                    android:padding="5dp"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/g_line" />

            <RelativeLayout
                android:id="@+id/rl_user_weight"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mydata_item_height"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:text="体重"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_edt_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:text="kg"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edt_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_edt_weight"
                    android:background="#00000000"
                    android:hint=" "
                    android:inputType="number"
                    android:maxEms="3"
                    android:maxLength="3"
                    android:numeric="integer"
                    android:padding="5dp"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/g_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/tv_jianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/mydata_item_height"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:gravity="center_vertical"
                    android:text="简介"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />

                <com.ak.qmyd.view.ContainsEmojiEditText
                    android:id="@+id/edt_user_jianjie"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_jianjie"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@drawable/editext_jianjie_border"
                    android:gravity="top"
                    android:hint="添加一段描述.."
                    android:maxEms="100"
                    android:maxLength="100"
                    android:padding="10dp"
                    android:textColor="@color/common_black_dark"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>