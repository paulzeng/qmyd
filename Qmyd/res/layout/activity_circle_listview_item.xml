<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <com.ak.qmyd.view.CircleImageView
                android:id="@+id/iv_circle_item_img"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/iv_circle_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/iv_circle_item_img"
                android:text="酷跑一族"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/iv_circle_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_circle_item_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_circle_item_img"
                android:ellipsize="end"
                android:maxEms="16"
                android:singleLine="true"
                android:text="酷跑一族"
                android:textColor="#717171"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>