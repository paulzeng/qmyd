<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="130dp"
        
        >

        <ImageView
            android:id="@+id/imageView_venues"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"     
            android:src="@drawable/ic_launcher" />

      
        
        <LinearLayout 
            android:id="@+id/linearLayout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView_venues"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            >
         <TextView
            android:id="@+id/textView_venues_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"          
            android:layout_weight="1"
            />
            
         <TextView 
             android:id="@+id/textView_venues_distance"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"           
             android:layout_marginRight="14dp"
             android:layout_marginLeft="5dp"
             />      
        </LinearLayout>
        

        <TextView
            android:id="@+id/textView_venues_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout_text"
            android:layout_alignLeft="@+id/linearLayout_text"
            android:text="TextView"
            android:textColor="#575757"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textStyle="bold" />

      

        <LinearLayout
           android:id="@+id/linear_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout_text"
            android:layout_below="@+id/linearLayout_text"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
             ></LinearLayout>
    </RelativeLayout>
</LinearLayout>
