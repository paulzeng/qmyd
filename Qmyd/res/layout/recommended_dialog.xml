<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white" >

        <ImageButton
            android:id="@+id/ib_recommend_dialog_back"
            android:layout_width="@dimen/title_width"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00ffffff"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="场馆预约"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_recommend_dialog_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/search" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/y_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_recommend_dialog_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/drop_down1"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="商圈"
            android:textColor="#333333" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_recommend_dialog_recommended"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/drop_down1"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="推荐"
            android:textColor="#333333" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4" />

    <LinearLayout
        android:id="@+id/btn_linear_tuijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="热门推荐"
            android:textColor="#444444"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView_tuijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ceshi32"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DAD9D9" />

    <LinearLayout
        android:id="@+id/btn_linear_zuijin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="离我最近"
            android:textColor="#444444"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView_zuijin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ceshi32" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DAD9D9" />

    <LinearLayout
        android:id="@+id/btn_linear_haoping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="好评优先"
            android:textColor="#444444"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView_haoping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ceshi32"
            android:visibility="gone" />
    </LinearLayout>

