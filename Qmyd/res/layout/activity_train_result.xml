<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_end_train_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_train_result"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/white" >

            <ImageButton
                android:id="@+id/ib_train_result_return"
                android:layout_width="@dimen/title_width"
                android:layout_height="@dimen/title_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left"
                android:background="#00ffffff"
                android:src="@drawable/arrow_back" />

            <TextView
                android:id="@+id/tv_train_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="训练成果"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/ib_train_result_share"
                android:layout_width="@dimen/title_width"
                android:layout_height="@dimen/title_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right"
                android:background="#00ffffff"
                android:src="@drawable/share" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_train_result_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEDEAB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="40dp" >

            <TextView
                android:id="@+id/tv_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前章节"
                android:textColor="#2B2B2B"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="训练完成"
                android:textColor="#767676"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/circle"
                android:gravity="center_vertical|center_horizontal" >

                <TextView
                    android:id="@+id/tv_train_result_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF900B"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_train_result_score"
                    android:layout_alignBottom="@+id/tv_train_result_score"
                    android:layout_toRightOf="@+id/tv_train_result_score"
                    android:text="积分"
                    android:textColor="#2B2B2B"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_train_result_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_train_result_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp" />

                <ImageView
                    android:id="@+id/iv_train_result_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_train_result_tv"
                    android:layout_alignLeft="@+id/tv_train_result_time"
                    android:layout_alignTop="@+id/tv_train_result_tv"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/tv_train_result_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_train_result_time"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_train_result_img"
                    android:text="时长" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_train_result_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tv_train_result_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_train_result_count"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_train_result_img1"
                    android:text="动作" />

                <ImageView
                    android:id="@+id/iv_train_result_img1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignTop="@+id/tv_train_result_tv1"
                    android:layout_toLeftOf="@+id/tv_train_result_count"
                    android:src="@drawable/dongzuo" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_train_result_heat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/tv_train_result_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_train_result_heat"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/iv_train_result_img2"
                    android:text="热量" />

                <ImageView
                    android:id="@+id/iv_train_result_img2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/tv_train_result_tv2"
                    android:layout_alignLeft="@+id/tv_train_result_heat"
                    android:src="@drawable/reliang" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/bt_train_result_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#E7E7E7"
                android:padding="20dp"
                android:text="完成"
                android:textColor="#383838"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>