<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_forget_pwd_detail_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_forget_pwd_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bj"
        android:orientation="vertical" >

        <!-- 头部title -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@android:color/transparent" >

            <ImageButton
                android:id="@+id/ib_forget_pwd_detail_return"
                android:layout_width="@dimen/title_width"
                android:layout_height="@dimen/title_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="#00ffffff"
                android:src="@drawable/arrow_back_w" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="重置密码"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@drawable/g_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/welcome" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgWelcome"
                android:gravity="center"
                android:orientation="horizontal" >

                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@drawable/g_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="欢迎来到全民体育的世界"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@drawable/g_line" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_forget_pwd_detail_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="5"
                android:alpha="0.3"
                android:background="@drawable/ed_round_bg"
                android:drawableLeft="@drawable/code"
                android:drawablePadding="10dp"
                android:hint="验证码"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:padding="15dp"
                android:textColor="#E4E4E4"
                android:textColorHint="#E4E4E4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt_forget_pwd_detail_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:alpha="0.3"
                android:background="@drawable/ed_round_bg"
                android:padding="15dp"
                android:text="获取中(59)"
                android:textColor="#ff8200"
                android:textColorHint="#ff8200"
                android:textSize="18sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_forget_pwd_detail_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:alpha="0.3"
            android:background="@drawable/ed_round_bg"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="10dp"
            android:hint="新密码"
            android:imeOptions="actionDone"
            android:maxLength="18"
            android:padding="15dp"
            android:password="true"
            android:textColor="#E4E4E4"
            android:textColorHint="#E4E4E4"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_forget_pwd_detail_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:alpha="0.3"
            android:background="@drawable/ed_round_bg"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="10dp"
            android:hint="确认新密码"
            android:imeOptions="actionDone"
            android:maxLength="18"
            android:padding="15dp"
            android:password="true"
            android:textColor="#E4E4E4"
            android:textColorHint="#E4E4E4"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_forget_pwd_detail_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:alpha="0.8"
            android:background="@drawable/btn_round_bg"
            android:gravity="center"
            android:padding="15dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>