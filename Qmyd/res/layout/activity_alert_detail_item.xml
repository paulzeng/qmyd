<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:descendantFocusability="blocksDescendants"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00"
            android:textColor="#FF8600"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="侧边单手平衡"
            android:textColor="#4B4B4B"
            android:layout_alignBaseline="@+id/tv_item_time"
            android:layout_toRightOf="@+id/tv_item_time"
            android:layout_marginLeft="15dp"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item_time"
            android:layout_below="@+id/tv_item_time"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_item_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05-11"
                android:textColor="#4B4B4B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_item_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="震动提醒"
                android:textColor="#4B4B4B"
                android:textSize="15sp" />

<!--             <TextView -->
<!--                 android:id="@+id/tv_item_count" -->
<!--                 android:layout_width="wrap_content" -->
<!--                 android:layout_height="wrap_content" -->
<!--                 android:layout_marginLeft="10dp" -->
<!--                 android:text="1次" -->
<!--                 android:textColor="#4B4B4B" -->
<!--                 android:textSize="15sp" /> -->
        </LinearLayout>

        <ToggleButton
            android:id="@+id/tb_alert_tb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:button="@drawable/ios7_btn"
            android:checked="false"
            android:textOff=""
            android:textOn="" />
        
    </RelativeLayout>

