<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="ThemeActivity" mce_bogus="1">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="dialog" parent="@android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- left menu -->
    <style name="left_menu_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/selector_home_left_menu_layout</item>
    </style>

    <style name="left_menu_layout_item_image">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="left_menu_layout_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="button1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="typeDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- activity无黑边 -->
        <item name="android:windowIsFloating">true</item>
        <!-- activity可滑动 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- activity点击空白部分不消失 -->
        <!-- activity透明 -->

        <item name="android:windowNoTitle">true</item>
        <!-- activity无标题 -->
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@drawable/editext_border</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- activity不变暗 -->
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_column_lq</item>
    </style>

    <style name="float_base">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 下载进度条样式 -->
    <style name="NumberProgressBar_Funny_Orange">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="max">100</item>
        <item name="progress">50</item>
        <item name="progress_unreached_color">@color/common_black_light</item>
        <item name="progress_reached_color">@color/orange_color</item>
        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">@color/orange_color</item>
        <item name="progress_reached_bar_height">5dp</item>
        <item name="progress_unreached_bar_height">5dp</item>
    </style>

    <!-- action sheet -->
    <style name="action_sheet" parent="@style/float_base"></style>

    <style name="action_sheet_animation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/action_sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/action_sheet_exit</item>
    </style>

    <style name="action_sheet_root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="action_sheet_bt">
        <item name="android:onClick">onClick</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:textColor">@color/common_black_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 网络访问的加载进度框 -->
    <style name="netLoadingDialog" parent="@android:style/Theme.Dialog">

        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 动态 -->
    <style name="top_nav_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#929497</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="top_nav_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_top_nav_line_bg</item>
        <item name="android:button">@null</item>
    </style>

    <!-- select photo -->
    <style name="CheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_checkbox_selector</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>